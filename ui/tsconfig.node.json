{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/update.ts",
    "src/api.ts",

    "src/**/*.test.*",

    "*.config.*",
    "forge.env.d.ts"
  ],
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["vitest/globals"]
  }
}
