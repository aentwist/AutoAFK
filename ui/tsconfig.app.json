{
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*"],
  "exclude": [
    "src/main.ts",
    "src/preload.ts",
    "src/update.ts",
    "src/api.ts",

    "src/**/*.test.*",
    "src/App.tesst.tsx"
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true, // might not be needed
    "lib": ["esnext"]
  }
}
